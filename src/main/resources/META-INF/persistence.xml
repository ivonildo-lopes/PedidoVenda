<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="PedidoPU">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.algaworks.pedidovenda.model.Categoria</class>

		<properties>
			<property name="hibernate.connection.username" value="postgres" />
			<property name="hibernate.connection.password" value="admin@123" />
			<property name="hibernate.connection.autocommit" value="false" />
	
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/CursoJavaEE" 
				/>
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
	
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" 
				/>
	
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>


